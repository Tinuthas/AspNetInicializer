@model List<Zoo>

@{
    ViewData["Title"] = "Listar";
}

<h1>Listar</h1>




<table>
    <tbody>
        <tr>
            <th>Nome</th>
            <th>DataAbertura</th>
            <th>EntidadeAdministradora</th>
        </tr>
        @foreach (var zoo in @Model)
        {
            <tr>
                <td>@zoo.Nome</td>
                <td>@zoo.Jaulas</td>
                <td>@zoo.DataAbertura.ToShortDateString()</td>
                <td>@zoo.EntidadeAdministradora</td>
            </tr>
        }
    </tbody>
</table>

<message texto="@TempData["msg"]"></message>

@section MenuLateral {
    <nav class="navbar navbar-expand-md navbar-light bg-light">
        <a href="#" class="navbar-brand">FIAP</a>
        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav">
                <a href="Cadastrar" class="nav-item nav-link">Cadastrar</a>
                <a href="Listar" class="nav-item nav-link">Listar</a>
            </div>
            <div class="navbar-nav ml-auto">
                <a href="#" class="nav-item nav-link">Login</a>
            </div>
        </div>
    </nav>
}


